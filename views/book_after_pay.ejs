        <h1>Booking Details</h1>
        <div class="detail-container">
            <form id="book-detail" action="">
                <fieldset>
                    <div class="detail">
                        <input type="radio" id="ss" name="option" value="single" />
                        <label for="single">Single Occupancy</label>
                        <input type="radio" id="ds" name="option" value="double" />
                        <label for="double">Double Occupancy</label>
                        <br/>
            
                        
                        <div class="single box">
