                            <input type="radio" id="hr" name="dOption" value="have" />
                            <label for="have">Have Roommate</label>
                            <input type="radio" id="dnhr" name="dOption" value="donothave" />
                            <label for="donothave">Do not have Roommate</label>

                        </div>
                        
                        <div class="have box1">
